{
  "id": null,
  "title": "Kubernetes SLA Dashboard",
  "tags": ["kubernetes", "sla"],
  "timezone": "browser",
  "panels": [
      {
        "id": 100,
        "title": "Cluster Level SLA",
        "type": "row",
        "collapsed": false,
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Worker Nodes SLA",
        "description": "Availability percentage of worker nodes in Ready state. Shows the uptime of each node in the cluster over the selected time range.",
        "type": "table",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 1
        },
        "targets": [
          {
            "expr": "avg_over_time(kube_node_status_condition{condition=\"Ready\",status=\"true\"}[$__range:$__rate_interval]) * 100",
            "legendFormat": "{{node}}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "node": "Node",
                "Value": "Availability %"
              }
            }
          },
          {
            "id": "filterFieldsByName",
            "options": {
              "include": {
                "names": ["Node", "Availability %"]
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "displayMode": "table",
              "inspect": false,
              "filterable": true
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Availability %"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                },
                {
                  "id": "custom.align",
                  "value": "right"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {"color": "red", "value": 0},
                      {"color": "yellow", "value": 95},
                      {"color": "green", "value": 99}
                    ]
                  }
                },
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background"
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 5,
        "title": "Service Discovery SLA",
        "description": "Availability of DNS services (CoreDNS/kube-dns). Critical for service discovery and pod-to-pod communication within the cluster.",
        "type": "stat",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 1
        },
        "targets": [
          {
            "expr": "avg_over_time(avg(up{job=~\"kube-dns|coredns\"})[$__range:$__rate_interval]) * 100",
            "legendFormat": "DNS Availability %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99}
              ]
            }
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value"
        }
      },
      {
        "id": 101,
        "title": "Namespace Level SLA",
        "type": "row",
        "collapsed": false,
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 9
        }
      },
      {
        "id": 1,
        "title": "POD SLA - Availability",
        "description": "Percentage of pods in Ready state per namespace. Indicates the health and availability of applications running in each namespace.",
        "type": "table",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 10
        },
        "targets": [
          {
            "expr": "avg_over_time(avg(kube_pod_status_ready{condition=\"true\",namespace=~\"$namespace\"}) by (namespace)[$__range:$__rate_interval]) * 100",
            "legendFormat": "{{namespace}}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "namespace": "Namespace",
                "Value": "Availability %"
              }
            }
          },
          {
            "id": "filterFieldsByName",
            "options": {
              "include": {
                "names": ["Namespace", "Availability %"]
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "fields": {},
              "sort": [
                {
                  "field": "Namespace",
                  "desc": false
                }
              ]
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "displayMode": "table",
              "inspect": false,
              "filterable": true
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Availability %"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                },
                {
                  "id": "custom.align",
                  "value": "right"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {"color": "red", "value": 0},
                      {"color": "yellow", "value": 95},
                      {"color": "green", "value": 99}
                    ]
                  }
                },
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background"
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 6,
        "title": "Workload Replica Availability",
        "description": "Percentage of desired replicas that are available for Deployments and StatefulSets per namespace. Shows if workloads have the expected number of running replicas.",
        "type": "table",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 10
        },
        "targets": [
          {
            "expr": "(sum by (namespace) (kube_deployment_status_replicas_available{namespace=~\"$namespace\"}) / sum by (namespace) (kube_deployment_spec_replicas{namespace=~\"$namespace\"})) * 100 or (sum by (namespace) (kube_statefulset_status_replicas_ready{namespace=~\"$namespace\"}) / sum by (namespace) (kube_statefulset_replicas{namespace=~\"$namespace\"})) * 100",
            "legendFormat": "{{namespace}}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "namespace": "Namespace",
                "Value": "Replica Availability %"
              }
            }
          },
          {
            "id": "filterFieldsByName",
            "options": {
              "include": {
                "names": ["Namespace", "Replica Availability %"]
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "fields": {},
              "sort": [
                {
                  "field": "Namespace",
                  "desc": false
                }
              ]
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "displayMode": "table",
              "inspect": false,
              "filterable": true
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Replica Availability %"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                },
                {
                  "id": "custom.align",
                  "value": "right"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {"color": "red", "value": 0},
                      {"color": "yellow", "value": 95},
                      {"color": "green", "value": 99}
                    ]
                  }
                },
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background"
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 102,
        "title": "HTTP Request Success Rate",
        "type": "row",
        "collapsed": false,
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 18
        }
      },
      {
        "id": 3,
        "title": "HTTP Success Rate by Namespace",
        "description": "Percentage of successful HTTP requests (2xx and 3xx status codes) per namespace. Measures the reliability of applications exposed through Ingress.",
        "type": "table",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 19
        },
        "targets": [
          {
            "expr": "(sum by (exported_namespace) (rate(nginx_ingress_controller_requests{exported_namespace=~\"$namespace\",status=~\"2..|3..\"}[$__rate_interval])) / sum by (exported_namespace) (rate(nginx_ingress_controller_requests{exported_namespace=~\"$namespace\"}[$__rate_interval]))) * 100 > 0",
            "legendFormat": "{{exported_namespace}}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "exported_namespace": "Namespace",
                "Value": "Success Rate %"
              }
            }
          },
          {
            "id": "filterFieldsByName",
            "options": {
              "include": {
                "names": ["Namespace", "Success Rate %"]
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "fields": {},
              "sort": [
                {
                  "field": "Namespace",
                  "desc": false
                }
              ]
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "displayMode": "table",
              "inspect": false,
              "filterable": true
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Success Rate %"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                },
                {
                  "id": "custom.align",
                  "value": "right"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {"color": "red", "value": 0},
                      {"color": "yellow", "value": 95},
                      {"color": "green", "value": 99}
                    ]
                  }
                },
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background"
                  }
                }
              ]
            }
          ]
        }
      }
  ],
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "refresh": false,
  "templating": {
    "list": [
      {
        "current": {},
        "label": "Data source",
        "name": "datasource",
        "options": [],
        "query": "prometheus",
        "refresh": 1,
        "type": "datasource"
      },
      {
        "current": {},
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "label": "Namespace",
        "name": "namespace",
        "options": [],
        "query": "label_values(kube_pod_info, namespace)",
        "refresh": 2,
        "sort": 1,
        "multi": true,
        "includeAll": true,
        "type": "query"
      }
    ]
  }
}
