{
  "id": null,
  "title": "Dashboard SLA Kubernetes",
  "tags": ["kubernetes", "sla"],
  "timezone": "browser",
  "panels": [
      {
        "id": 100,
        "title": "SLA Nível de Cluster",
        "type": "row",
        "collapsed": false,
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "SLA dos Nós Workers",
        "description": "Percentual de disponibilidade dos nós workers no estado Ready. Mostra o uptime de cada nó no cluster durante o período selecionado.",
        "type": "table",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 1
        },
        "targets": [
          {
            "expr": "avg_over_time(kube_node_status_condition{condition=\"Ready\",status=\"true\"}[$__range:$__rate_interval]) * 100",
            "legendFormat": "{{node}}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "node": "Node",
                "Value": "Availability %"
              }
            }
          },
          {
            "id": "filterFieldsByName",
            "options": {
              "include": {
                "names": ["Node", "Availability %"]
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "displayMode": "table",
              "inspect": false,
              "filterable": true
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Availability %"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                },
                {
                  "id": "custom.align",
                  "value": "right"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {"color": "red", "value": 0},
                      {"color": "yellow", "value": 95},
                      {"color": "green", "value": 99}
                    ]
                  }
                },
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background"
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 5,
        "title": "SLA de Descoberta de Serviços",
        "description": "Disponibilidade dos serviços DNS (CoreDNS/kube-dns). Crítico para descoberta de serviços e comunicação pod-to-pod dentro do cluster.",
        "type": "stat",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 1
        },
        "targets": [
          {
            "expr": "avg_over_time(avg(up{job=~\"kube-dns|coredns\"})[$__range:$__rate_interval]) * 100",
            "legendFormat": "DNS Availability %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99}
              ]
            }
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value"
        }
      },
      {
        "id": 101,
        "title": "SLA Nível de Namespace",
        "type": "row",
        "collapsed": false,
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 9
        }
      },
      {
        "id": 1,
        "title": "SLA de PODs - Disponibilidade",
        "description": "Percentual de pods no estado Ready por namespace. Indica a saúde e disponibilidade das aplicações executando em cada namespace.",
        "type": "table",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 10
        },
        "targets": [
          {
            "expr": "avg_over_time(avg(kube_pod_status_ready{condition=\"true\",namespace=~\"$namespace\"}) by (namespace)[$__range:$__rate_interval]) * 100",
            "legendFormat": "{{namespace}}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "namespace": "Namespace",
                "Value": "Availability %"
              }
            }
          },
          {
            "id": "filterFieldsByName",
            "options": {
              "include": {
                "names": ["Namespace", "Availability %"]
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "fields": {},
              "sort": [
                {
                  "field": "Namespace",
                  "desc": false
                }
              ]
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "displayMode": "table",
              "inspect": false,
              "filterable": true
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Availability %"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                },
                {
                  "id": "custom.align",
                  "value": "right"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {"color": "red", "value": 0},
                      {"color": "yellow", "value": 95},
                      {"color": "green", "value": 99}
                    ]
                  }
                },
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background"
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 6,
        "title": "Disponibilidade de Réplicas de Workloads",
        "description": "Percentual de réplicas desejadas que estão disponíveis para Deployments e StatefulSets por namespace. Mostra se os workloads têm o número esperado de réplicas em execução.",
        "type": "table",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 10
        },
        "targets": [
          {
            "expr": "(sum by (namespace) (kube_deployment_status_replicas_available{namespace=~\"$namespace\"}) / sum by (namespace) (kube_deployment_spec_replicas{namespace=~\"$namespace\"})) * 100 or (sum by (namespace) (kube_statefulset_status_replicas_ready{namespace=~\"$namespace\"}) / sum by (namespace) (kube_statefulset_replicas{namespace=~\"$namespace\"})) * 100",
            "legendFormat": "{{namespace}}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "namespace": "Namespace",
                "Value": "Replica Availability %"
              }
            }
          },
          {
            "id": "filterFieldsByName",
            "options": {
              "include": {
                "names": ["Namespace", "Replica Availability %"]
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "fields": {},
              "sort": [
                {
                  "field": "Namespace",
                  "desc": false
                }
              ]
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "displayMode": "table",
              "inspect": false,
              "filterable": true
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Replica Availability %"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                },
                {
                  "id": "custom.align",
                  "value": "right"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {"color": "red", "value": 0},
                      {"color": "yellow", "value": 95},
                      {"color": "green", "value": 99}
                    ]
                  }
                },
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background"
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 102,
        "title": "Taxa de Sucesso de Requisições HTTP",
        "type": "row",
        "collapsed": false,
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 18
        }
      },
      {
        "id": 3,
        "title": "Taxa de Sucesso HTTP por Namespace",
        "description": "Percentual de requisições HTTP bem-sucedidas (códigos de status 2xx e 3xx) por namespace. Mede a confiabilidade das aplicações expostas através do Ingress.",
        "type": "table",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 19
        },
        "targets": [
          {
            "expr": "(sum by (exported_namespace) (rate(nginx_ingress_controller_requests{exported_namespace=~\"$namespace\",status=~\"2..|3..\"}[$__rate_interval])) / sum by (exported_namespace) (rate(nginx_ingress_controller_requests{exported_namespace=~\"$namespace\"}[$__rate_interval]))) * 100 > 0",
            "legendFormat": "{{exported_namespace}}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "exported_namespace": "Namespace",
                "Value": "Success Rate %"
              }
            }
          },
          {
            "id": "filterFieldsByName",
            "options": {
              "include": {
                "names": ["Namespace", "Success Rate %"]
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "fields": {},
              "sort": [
                {
                  "field": "Namespace",
                  "desc": false
                }
              ]
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "displayMode": "table",
              "inspect": false,
              "filterable": true
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Success Rate %"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "percent"
                },
                {
                  "id": "custom.align",
                  "value": "right"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {"color": "red", "value": 0},
                      {"color": "yellow", "value": 95},
                      {"color": "green", "value": 99}
                    ]
                  }
                },
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background"
                  }
                }
              ]
            }
          ]
        }
      }
  ],
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "refresh": false,
  "templating": {
    "list": [
      {
        "current": {},
        "label": "Fonte de dados",
        "name": "datasource",
        "options": [],
        "query": "prometheus",
        "refresh": 1,
        "type": "datasource"
      },
      {
        "current": {},
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "label": "Namespace",
        "name": "namespace",
        "options": [],
        "query": "label_values(kube_pod_info, namespace)",
        "refresh": 2,
        "sort": 1,
        "multi": true,
        "includeAll": true,
        "type": "query"
      }
    ]
  }
}
